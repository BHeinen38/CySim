@using Microsoft.AspNetCore.Identity
@model IEnumerable<CySim.Models.Scenario.Scenario>
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Scenario Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (signInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Access the sceanrios here</h2>
        </div>
        <br />
        <div class="col-12">
            @if (User.IsInRole("Admin"))
            {
                <div align="right" class="col-6">
                    <a class="btn btn-info" asp-action="Create">Add a Scanario<i class="fa-solid fa-bicycle"></i></a>
                </div>
                <br>
            }
            <table class="table table-striped border">
                <tr class="table-info">
                    <th colspan="2">
                        @Html.DisplayNameFor(m => m.FileName)

                    </th>
                    <th colspan="2">
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                     @if (User.IsInRole("Admin")) 
                     {
                    
                        <th colspan="1">
                            Actions
                        </th>
                     }
                </tr>
                @if (User.IsInRole("Red Team"))
                {
                    @foreach (var item in Model)
                    {
                        @if (item.isRed)
                        {
                            <tr>
                                <td colspan="2">
                                    <a href="@item.FilePath">@item.FileName</a>
                                </td>
                                <td colspan="2">
                                    @Html.DisplayFor(w => item.Description)
                                </td>
                            </tr>
                        }
                    }
                }
                @if (User.IsInRole("Blue Team"))
                {
                    @foreach (var item in Model)
                    {
                        @if (!item.isRed)
                        {
                            <tr>
                                <td colspan="2">
                                    <a href="@item.FilePath">@item.FileName</a>
                                </td>
                                <td colspan="2">
                                    @Html.DisplayFor(w => item.Description)
                                </td>
                            </tr>
                        }
                    }
                }
                @if (User.IsInRole("Admin"))
                {
                    @foreach (var item in Model)
                    {
                       <tr>
                            <td colspan="2">
                                <a href="@item.FilePath">@item.FileName</a>
                            </td>
                            <td colspan="2">
                                @Html.DisplayFor(w => item.Description)
                            </td>
                            
                            <td colspan="1">
                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit='return confirm("Are you sure you want to delete the @item.FileName scenario?")'>
                                    <button type="submit" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg>
                                    </button>
                                    
                                </form>
                            </td>
                        </tr>
                   }
                }

            </table>

        </div>
    </div>
}
