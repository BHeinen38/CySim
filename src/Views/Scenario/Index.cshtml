@using Microsoft.AspNetCore.Identity
@model IEnumerable<CySim.Models.Scenario.Scenario>
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Scenario Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (signInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Access the sceanrios here</h2>
        </div>
        <br />
        <div class="col-12">
            @if (User.IsInRole("Admin"))
            {
                <div align="left" class="col-6">
                    <a class="btn btn-primary" asp-action="Create">Add a Scanario<i class="fa-solid fa-bicycle"></i></a>
                </div>
                <br>
            }
            <table class="table table-striped border">
                <tr class="table-info">
                    <th colspan="2">
                        @Html.DisplayNameFor(m => m.FileName)

                    </th>
                    <th colspan="2">
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                     @if (User.IsInRole("Admin")) 
                     {
                    
                        <th colspan="1">
                            Actions
                        </th>
                     }
                </tr>
                @if (User.IsInRole("Red Team"))
                {
                    @foreach (var item in Model)
                    {
                        @if (item.isRed)
                        {
                            <tr>
                                <td colspan="2">
                                    <a href="@item.FilePath">@item.FileName</a>
                                </td>
                                <td colspan="2">
                                    @Html.DisplayFor(w => item.Description)
                                </td>
                            </tr>
                        }
                    }
                }
                @if (User.IsInRole("Blue Team"))
                {
                    @foreach (var item in Model)
                    {
                        @if (!item.isRed)
                        {
                            <tr>
                                <td colspan="2">
                                    <a href="@item.FilePath">@item.FileName</a>
                                </td>
                                <td colspan="2">
                                    @Html.DisplayFor(w => item.Description)
                                </td>
                            </tr>
                        }
                    }
                }
                @if (User.IsInRole("Admin"))
                {
                    @foreach (var item in Model)
                    {
                       <tr>
                            <td colspan="2">
                                <a href="@item.FilePath">@item.FileName</a>
                            </td>
                            <td colspan="2">
                                @Html.DisplayFor(w => item.Description)
                            </td>
                            
                            <td colspan="1">
                                <a class="btn btn-success d-inline-block" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form class="d-inline-block" asp-action="Delete" asp-route-id="@item.Id" onsubmit='return confirm("Are you sure you want to delete the @item.FileName scenario?")'>
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                   }
                }

            </table>

        </div>
    </div>
}
