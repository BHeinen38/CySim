@model CySim.Models.Scenario.Scenario

@{

    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-info">Add a new Scenario</h2>
@if (ViewData["errors"] != null && !ViewData["errors"].Equals(""))
{
    <p style="color:red;">@ViewData["errors"]</p>
}
<form method="post" action="Create" enctype="multipart/form-data">
    <div class="form-group row">
         <div class="col-2">
            <label for="file">Select Scenario to Upload:</label>
        </div>
        <div class="col-4">
            <input type="file" class="form-control" name="file"/>
        </div>
        <div class="col-2">
            <label for="Description">Description:</label>
        </div>
        <div class="col-4">
            <input type="text" class="form-control" name="Description" />
        </div>
        <div class="col-2">
            <label for="isRed">Is this for red team?</label>
        </div>
        <div class="col-4">
            <input type="text" class="form-control" name="isRed"  />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>

