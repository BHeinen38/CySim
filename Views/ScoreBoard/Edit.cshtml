@model CySim.Models.TeamRegistration.TeamRegistration

@{

    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Edit the Score</h2>
<form method="post" action="Edit">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TeamName"></label>
        </div>
        <div class="col-4">
            <input asp-for="TeamName" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Score"></label>
        </div>
        <div class="col-4">
            <input asp-for="Score" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Usability"></label>
        </div>
        <div class="col-4">
            <input asp-for="Usability" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="Flags"></label>
        </div>
        <div class="col-4">
            <input asp-for="Flags" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="ScoreBoard" class="btn btn-success">Back</a>
        </div>
    </div>
</form>
