@model IEnumerable<CySim.Models.TeamRegistration.TeamRegistration>

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> @* Forces reset of CSS file to prevent caching and not updating during development *@
<div class="container">
    <header>
        <br />
    </header>
    <article>
        <div class="col-md-10 col-centered">
            <table class="col-md-10 col-centered">
                <thead>
                    <tr>
                        <td colspan="3" align="center">Placement</td>
                        <td align="center" class="thead-secondary">Score</td>
                        <td align="center" class="thead-secondary">Flags</td>
                        <td align="center" class="thead-secondary">Usability</td>
                    </tr>
                </thead>
                <tbody>
                    @{int iter = 1; }
                    @foreach (var item in Model)@* Right now this will print out 5 team fox placeholder rankings needs to become a for each loop*@
                        {
                        <tr>
                            <td class="scoreboard-ranking">@(iter)</td>
                            <td class="scoreboard-team-logo">
                                <img class="scoreboard-team-logo"
                                     src="https://www.dropbox.com/s/4ib10cmlh0cden6/foxIcon.jpg?dl=1" alt="Team Foxes" height="100" width="100">
                            </td>
                            <td class="scoreboard-team">@item.TeamName</td>
                            <td class="scoreboard-score">@item.Score</td>
                            <td class="scoreboard-flags">@item.Usability</td>
                            <td class="scoreboard-usability">@item.Flags</td>
                            
                        </tr>
                            ++iter;
                        }
                </tbody>
            </table>
            <br />
        </div>
    </article>
</div>



