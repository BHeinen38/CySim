@model CySim.Models.TeamRegistration.TeamRegistration

@{

    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Add a New Team</h2>
<form method="post" action="Create">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TeamName"></label>
        </div>
        <div class="col-4">
            <input asp-for="TeamName" class="form-control" />
        </div>
        <div class="form-check">
            <label class="form-check-label" for="isRed">Red Team?</label>
            <input type="checkbox" class="form-check-input" name="isRed" value="false" onchange="this.value=this.checked" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>

