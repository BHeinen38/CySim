@model IEnumerable<CySim.Models.TeamRegistration.TeamRegistration>

@{

    ViewData["Title"] = "Team Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />


<div>

</div>

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Register For a Team here</h2>
    </div>
    <div align="right" class="col-6">
        <a class="btn btn-info" asp-action="Create">Register or Add a Team <i class="fa-solid fa-bicycle"></i></a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th colspan="2">
                    @Html.DisplayNameFor(m => m.TeamName)

                </th>
                <th colspan="2">
                    @Html.DisplayNameFor(m => m.AvailableSpots)
                </th>
                <th colspan="2">
                    @Html.DisplayNameFor(m => m.SpotsTaken)
                </th>
                <th colspan="2">
                    Join Team
                </th>
                <th align="right">
                    Edit/Delete
                </th>
                @*<th></th>*@
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td colspan="2">
                        @Html.DisplayFor(w => item.TeamName)
                    </td>
                    <td colspan="2">
                        @Html.DisplayFor(w => item.AvailableSpots)
                    </td>
                    <td colspan="2">
                        @Html.DisplayFor(w => item.SpotsTaken)
                    </td>
                    <partial name="_TableButtonPartial" model="item.Id" />

                </tr>
            }
        </table>
    </div>
</div>
