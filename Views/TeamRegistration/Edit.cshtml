@model CySim.Models.TeamRegistration.TeamRegistration

@{

    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Edit a Team for @Model.TeamName</h2>
<form method="post" action="Edit">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TeamName"></label>
        </div>
        <div class="col-4">
            <input asp-for="TeamName" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="User1"></label>
        </div>
        <div class="col-4">
            <input asp-for="User1" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="User2"></label>
        </div>
        <div class="col-4">
            <input asp-for="User2" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="User3"></label>
        </div>
        <div class="col-4">
            <input asp-for="User3" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="User4"></label>
        </div>
        <div class="col-4">
            <input asp-for="User4" class="form-control" />
        </div>
        <div class="col-2">
            <label asp-for="User5"></label>
        </div>
        <div class="col-4">
            <input asp-for="User5" class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="User6"></label>
        </div>
        <div class="col-4">
            <input asp-for="User6" class="form-control" />
        </div>
        @*<div class="form-group">
            <label for="file">Profile Picture to replace @Model.FileName (Optional):</label>
            <input type="file" class="form-control" name="file" />
        </div>*@
        <div class="form-check">
            <label class="form-check-label" for="isRed">Red Team?</label>
            <input type="checkbox" class="form-check-input" name="isRed" value=@(Model.IsRed?"true":"false") @(Model.IsRed ? "checked='checked'" : "") onchange="this.value=this.checked" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>

